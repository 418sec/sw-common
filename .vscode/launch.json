{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/packages/proc/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/packages/proc/",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/packages/proc/test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "rollup",
            "program": "${workspaceFolder}/packages/rollup-turtle/build.js",
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "proc-metrics",
            "program": "${workspaceFolder}/packages/proc/test.js",
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/packages/proc/"
        }
    ]
}